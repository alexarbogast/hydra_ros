<?xml version="1.0" ?>
<launch>

  <!-- GDB functionality -->
  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <!-- Load the URDF, SRDF and other .yaml configuration files on the param server -->
  <include file="$(find hydra_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="true"/>
    <arg name="robot_description" value="robot_description"/>
  </include>
  
  <!-- Load joint limits to override URDF -->
  <rosparam file="$(find hydra_moveit_config)/config/joint_limits.yaml" command="load"/>
  
  <!-- Load SIMULATION hardware interface -->
  <rosparam file="$(find hydra_control)/config/hydra_hardware.yaml" command="load"/>
  <node name="hydra_hw_interface" pkg="moveit_sim_controller" respawn="false"
      type="moveit_sim_hw_main" output="screen" launch-prefix="$(arg launch_prefix)"/>
  
  <!-- Load controller manager -->
  <rosparam file="$(find hydra_control)/config/joint_state_controllers.yaml" command="load"/>
  <rosparam file="$(find hydra_control)/config/velocity_trajectory_controllers.yaml" command="load"/>
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" 
    args="
      robot1_joint_state_controller
      robot2_joint_state_controller
      robot3_joint_state_controller
      positioner_joint_state_controller
      robot1_trajectory_controller
      robot2_trajectory_controller
      robot3_trajectory_controller
      positioner_trajectory_controller
    "/>

  <rosparam file="$(find hydra_control)/config/velocity_controllers.yaml" command="load"/>
  <node name="controller_spawner_stopped" pkg="controller_manager" type="spawner" respawn="false" output="screen"
    args="--stopped
      robot1_joint_velocity_controller
      robot2_joint_velocity_controller
      robot3_joint_velocity_controller
      positioner_joint_velocity_controller
    "/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"/>
  
</launch>
